{
    "name": "stoker",
    "private": true,
    "version": "0.4.23",
    "type": "module",
    "license": "UNLICENSED",
    "scripts": {
        "clean:lib": "rm -rf lib",
        "clean:functions": "rm -rf functions/lib",
        "dev:assets": "npm run clean:lib && tsc && node bin/build.js && node bin/shim.js && npm --prefix functions run build && cp -r src/. ../web/src/assets/system-custom && cp lib/main.js ../web/src/assets/system-custom/main.js",
        "dev": "nodemon --quiet --watch src --ext ts,tsx,js,json --exec \"npm run dev:assets\"",
        "format": "",
        "lint": "tsc --noEmit && eslint . && npm --prefix functions run lint",
        "prebuild": "npm run clean:lib && npm run clean:functions",
        "build": "tsc && node ../web/bin/build.js && node bin/build.js && node bin/shim.js && npm --prefix functions run build",
        "test": "echo 'Run `npm run test:run` to run tests'",
        "test:run": "vitest --run",
        "admin-emulators": "export FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9099' && export FIREBASE_DATABASE_EMULATOR_HOST='127.0.0.1:9000' && export FIRESTORE_EMULATOR_HOST='127.0.0.1:8080' && export FIREBASE_STORAGE_EMULATOR_HOST='127.0.0.1:9199'"
    },
    "dependencies": {
        "@stoker-platform/cli": "0.5.19",
        "@stoker-platform/node-client": "0.5.12",
        "@stoker-platform/types": "0.5.4",
        "@stoker-platform/utils": "0.5.7",
        "@stoker-platform/web-app": "0.5.17",
        "@stoker-platform/web-client": "0.5.7",
        "algoliasearch": "^5.46.2",
        "firebase-admin": "^13.6.0",
        "moment-timezone": "latest",
        "xero-node": "latest"
    },
    "engines": {
        "node": ">=22",
        "npm": "11"
    },
    "stokerExternalPackages": {
        "xero-node": "latest",
        "moment-timezone": "latest"
    }
}
